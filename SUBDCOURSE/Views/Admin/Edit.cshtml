@model Moto

    <form asp-action="edit" asp-controller="admin" asp-route-id="@Model.Id">
        <div class="form-group">
            <label asp-for="Name" class="control-label">Название</label>
            <input type="text" asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Price" class="control-label">Цена</label>
            <input type="number" asp-for="Price" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Available" class="control-label">Количество</label>
            <input type="number" asp-for="Available" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ShortDesc" class="control-label">Короткое описание</label>
            <input type="text" asp-for="ShortDesc" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="LongDesc" class="control-label">Полное описание</label>
            <input type="text" asp-for="LongDesc" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Img" class="control-label">URL-изображения</label>
            <input type="text" asp-for="Img" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="isFavorite" class="control-label">Популярная</label>
            <input type="checkbox" asp-for="isFavorite" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Send" class="btn btn-default" />
        </div>
    </form>